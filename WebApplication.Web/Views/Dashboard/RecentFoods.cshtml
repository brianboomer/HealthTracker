@model IList<UserFood>
<head>
    <link rel="stylesheet" href="~/css/UserDashboard.css" />
</head>
<div class="wrapper">
    @await Component.InvokeAsync("DashboardNavigation")
    <div id="userInfo">
        <h2>Recent Foods</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Meal</th>
                    <th>Edit</th>
                    <th>Add</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var foodItem in Model)
                {
                    <tr>
                        <td>@foodItem.FoodName</td>
                        <td>@foodItem.DateOfEntry.ToShortDateString()</td>

                        @if (foodItem.MealId == 1)
                        {
                            <td>Breakfast</td>
                        }
                        @if (foodItem.MealId == 2)
                        {
                            <td>Lunch</td>
                        }
                        @if (foodItem.MealId == 3)
                        {
                            <td>Dinner</td>
                        }
                        @if (foodItem.MealId == 4)
                        {
                            <td>Snack</td>
                        }
                        @if (foodItem.MealId == 5)
                        {
                            <td>Dessert</td>
                        }
                        <td>
                            <form>
                                <button class="btn">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form asp-controller="Dashboard" asp-action="SaveFood" method="post">
                                <input type="hidden" name="name" value="@foodItem.FoodName" />
                                <input type="hidden" name="serving_unit" value="@foodItem.ServingUnit" />
                                <input type="hidden" name="serving_qty" value="@foodItem.ServingQuantity" />
                                <input type="hidden" name="mealId" value="@foodItem.MealId" />
                                <input type="hidden" name="numberOfServings" value="@foodItem.NumberOfServings" />
                                <button class="btn" type="submit">Add</button>
                            </form>
                        </td>
                        <td>
                            <form>
                                <button class="btn">Delete</button>
                            </form>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>