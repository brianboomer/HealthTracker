@model FoodItem
@{
    ViewData["Title"] = "ViewFoodDetail";
}

<h2>Nutrition Details for @Model.foods[0].Name</h2>
<img src="@Model.foods[0].Imgurl" />
<p>@Model.foods[0].serving_qty @Model.foods[0].serving_unit per serving</p>
<p><strong>Calories: </strong>@Model.foods[0].nf_calories</p>
<p><strong>Total Fat: </strong>@Model.foods[0].nf_total_fat</p>
<p><strong>Saturated Fat: </strong>@Model.foods[0].nf_saturated_fat</p>
<p><strong>Carbohydrates: </strong>@Model.foods[0].nf_total_carbohydrate</p>
<p><strong>Protein: </strong>@Model.foods[0].nf_protein</p>
<p><strong>Sugars: </strong>@Model.foods[0].nf_sugars</p>
<p><strong>Dietary Fiber: </strong>@Model.foods[0].nf_dietary_fiber</p>
<p><strong>Cholesterol: </strong>@Model.foods[0].nf_cholesterol</p>
<p><strong>Sodium: </strong>@Model.foods[0].nf_sodium</p>
<br />

<form asp-controller="Dashboard" asp-action="SaveFood" asp-route-mealId="mealId" asp-route-numberOfServings="numberOfServings" method="post">
    <label>Meal Classification</label>
    <select>
        <option name="mealId" value="1">Breakfast</option>
        <option name="mealId" value="2">Lunch</option>
        <option name="mealId" value="3">Dinner</option>
        <option name="mealId" value="4">Snack</option>
        <option name="mealId" value="5">Dessert</option>
    </select>

    <div>
        <label>Number of Servings: </label>
        <select>
            <option name="numberOfServings" value="1">1</option>
            <option name="numberOfServings" value="2">2</option>
            <option name="numberOfServings" value="3">3</option>
            <option name="numberOfServings" value="4">4</option>
            <option name="numberOfServings" value="5">5</option>
            <option name="numberOfServings" value="6">6</option>
            <option name="numberOfServings" value="7">7</option>
            <option name="numberOfServings" value="8">8</option>
            <option name="numberOfServings" value="9">9</option>
            <option name="numberOfServings" value="10">10</option>
        </select>
    </div>

    <input name="name" type="hidden" value="@Model.foods[0].Name" />
    <input name="imgurl" type="hidden" value="@Model.foods[0].Imgurl" />
    <input name="serving_qty" type="hidden" value="@Model.foods[0].serving_qty" />
    <input name="serving_unit" type="hidden" value="@Model.foods[0].serving_unit" />
    <input name="nf_calories" type="hidden" value="@Model.foods[0].nf_calories" />
    <input name="nf_total_fat" type="hidden" value="@Model.foods[0].nf_total_fat" />
    <input name="nf_saturated_fat" type="hidden" value="@Model.foods[0].nf_saturated_fat" />
    <input name="nf_total_carbohydrate" type="hidden" value="@Model.foods[0].nf_total_carbohydrate" />
    <input name="nf_protein" type="hidden" value="@Model.foods[0].nf_protein" />
    <input name="nf_sugars" type="hidden" value="@Model.foods[0].nf_sugars" />
    <input name="nf_dietary_fiber" type="hidden" value="@Model.foods[0].nf_dietary_fiber" />
    <input name="nf_cholesterol" type="hidden" value="@Model.foods[0].nf_cholesterol" />
    <input name="nf_potassium" type="hidden" value="@Model.foods[0].nf_potassium" />
    <input name="nf_sodium" type="hidden" value="@Model.foods[0].nf_sodium" />

    <button type="submit" value="submit">Add Food</button>
</form>
